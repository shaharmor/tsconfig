{
  "compilerOptions": {
    // "alwaysStrict": true, // strict
    // https://github.com/Microsoft/TypeScript/issues/29172
    // "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    // "noImplicitThis": true, // strict
    // "noImplicitAny": true, // strict
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // https://github.com/Microsoft/TypeScript/issues/29172
    // "outDir": "dist",
    // https://github.com/Microsoft/TypeScript/issues/29172
    // "paths": {
    //   "@/*": [
    //     "src/*"
    //   ]
    // },
    "preserveConstEnums": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    // "strictBindCallApply": true // strict
    // "strictNullChecks": true, // strict
    // "strictFunctionTypes": true, // strict
    // "strictPropertyInitialization": true, // strict
    "target": "esnext"
  }
}
